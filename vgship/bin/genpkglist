#!/bin/ksh

userpm=y
usedpkg=n
usepkg=n

if [[ $(egrep NAME /etc/os-release 2> /dev/null) == *[Uu]buntu* ]] then
    userpm=n
    usedpkg=y
    usepkg=n
    usepac=n
elif [[ $(egrep NAME /etc/os-release 2> /dev/null) == *Debian* ]] then
    userpm=n
    usedpkg=y
    usepkg=n
    usepac=n
elif [[ $(egrep NAME /etc/os-release 2> /dev/null) == *Arch\ Linux* ]] then
    userpm=n
    usedpkg=n
    usepkg=n
    usepac=y
elif [[ $(uname -a) == *FreeBSD* ]] then
    userpm=n
    usedpkg=n
    usepkg=y
    usepac=n
fi

findpaths() {
    unset paths
    typeset l paths

    if [[ "$1" == $PWD/* ]] then
        return
    fi

    if [[ "$1" == /* ]] then
        paths[0]="$1"
        paths[1]=$(realpath "$1")
    fi

    whence -v -a "$1" 2> /dev/null | while read l; do
        case $l in
        *"is a"*" shell "*)
            unset paths
            typeset paths
            return
            ;;
        *"is a"*" $PWD/"*)
            unset paths
            typeset paths
            return
            ;;
        *" is "*/*)
            l=${l##*" is "}
            l=${l##*([!/])}
            paths[${#paths[@]}]="$l"
            paths[${#paths[@]}]=$(realpath "$l")
            ;;
        esac
    done
}

function findpkg {
    typeset f=$1 p

    if [[ $userpm == y ]] then
        rpm -qf "$f" --qf '%{NAME}\n' 2> /dev/null | egrep -v 'is not owned'
        if [[ $f == /lib* ]] then
            rpm -qf "/usr$f" --qf '%{NAME}\n' 2> /dev/null \
            | egrep -v 'is not owned'
        fi
    elif [[ $usedpkg == y ]] then
        dpkg -S "*$f" 2> /dev/null | egrep -v 'diversion by ' | sed 's/:.*$//'
    elif [[ $usepac == y ]] then
        pacman -F "$f" 2> /dev/null | egrep 'is owned by' \
        | sed -e 's/.*is owned by //' -e 's/ .*$//' -e 's!^.*/!!'
    elif [[ $usepkg == y ]] then
        p=$(pkg which "$f" | egrep -v 'not found' | sed 's/^.* //')
        if [[ $p != '' ]] then
            pkg query '%n' "$p"
        fi
    fi | tail -1
}

function getpkg {
    typeset path pkg

    findpaths "$1"
    (( ${#paths[@]} == 0 )) && return

    for path in "${paths[@]}"; do
        pkg=$(findpkg "$path")
        if [[ $pkg != '' ]] then
            print "$pkg"
            return
        fi
    done
    print -u2 NOT FOUND $1
}

gmode=n
[[ $1 == -g ]] && gmode=y

if [[ ! -d arch ]] then
    print -u2 ERROR no arch directory
    exit 1
fi

archs=
for dir in arch/*; do
    [[ ! -d $dir || ! -d $dir/bin ]] && continue
    archs+=" ${dir##*/}"
done

for arch in $archs; do
    case $gmode in
    n) name=rpms.$arch ;;
    *) name=rpms-build.$arch ;;
    esac

    (
        PATH=$PWD/arch/$arch/bin:$PATH
        LD_LIBRARY_PATH=$PWD/arch/$arch/lib:$LD_LIBRARY_PATH

        tw -e 'type != DIR' file | egrep 'script' | sed 's/:.*$//' \
        | while read i; do
            cp $i a.sh
            ksh -R a.A a.sh 2> /dev/null
            egrep -v '^p;' a.A | egrep ';p;' | awk -F';' '{ print $3 }'
            rm a.sh a.A
        done | sort -u | while read i; do
            getpkg "$i"
        done
    
        find /usr -name "mod_ssl.so" 2> /dev/null | read p
        if [[ $p != '' ]] then
            getpkg "$p"
        fi
    
        tw -e 'type != DIR' -e 'action: printf ("%s %s\n", mode, path)' \
        | egrep ^-rwx | while read m f; do
            ldd $f 2> /dev/null
        done | egrep '=>' | sed 's/^.*=> //' | sed 's/^	//' | sed 's/ (.*//' \
        | sort -u | while read f; do
            [[ $f == '' ]] && continue
            getpkg "$f"
            if [[ $gmode == y && $f == *.so* ]] then
                getpkg "${f%.so*}.a"
                getpkg "${f%.so*}.so"
            fi
        done
    
        getpkg /bin/ksh
        getpkg /usr/bin/ssh
        getpkg /usr/bin/cc
        getpkg /usr/bin/yacc
        getpkg /usr/bin/bison
        getpkg /usr/lib64/graphviz/libgvplugin_dot_layout.so
        getpkg /usr/lib/x86_64-linux-gnu/graphviz/libgvplugin_dot_layout.so

        getpkg /usr/lib64/graphviz/libgvplugin_neato_layout.so
        getpkg /usr/lib/x86_64-linux-gnu/graphviz/libgvplugin_neato_layout.so

        getpkg /usr/lib64/graphviz/libgvplugin_gd.so
        getpkg /usr/lib/x86_64-linux-gnu/graphviz/libgvplugin_gd.so

        getpkg /usr/lib64/graphviz/libgvplugin_core.so
        getpkg /usr/lib/x86_64-linux-gnu/graphviz/libgvplugin_core.so
    ) 2> ~/$name.log | sort -u > ~/$name
done
